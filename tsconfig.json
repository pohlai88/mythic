{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": false,
    "composite": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@mythic/nextjs-shared-utils": ["./packages/NextJS/Shared-Utils/src"],
      "@mythic/nextjs-shared-utils/*": ["./packages/NextJS/Shared-Utils/src/*"],
      "@mythic/typescript-shared-types": ["./packages/TypeScript/Shared-Types/src"],
      "@mythic/typescript-shared-types/*": ["./packages/TypeScript/Shared-Types/src/*"],
      "@mythic/tailwindcss-v4-design-system": ["./packages/TailwindCSS-V4/Design-System/src"],
      "@mythic/tailwindcss-v4-design-system/*": ["./packages/TailwindCSS-V4/Design-System/src/*"],
      "@mythic/nextjs-domain-core": ["./packages/NextJS/Domain-Core/src"],
      "@mythic/nextjs-domain-core/*": ["./packages/NextJS/Domain-Core/src/*"],
      "@mythic/nodejs-performance": ["./packages/NodeJS/Performance/src"],
      "@mythic/nodejs-performance/*": ["./packages/NodeJS/Performance/src/*"],
      "@mythic/nodejs-monitoring": ["./packages/NodeJS/Monitoring/src"],
      "@mythic/nodejs-monitoring/*": ["./packages/NodeJS/Monitoring/src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "scripts/**/*",
    "**/dist",
    "**/.next",
    "**/.turbo"
  ]
}
