{
  "name": "@mythic/boardroom",
  "version": "1.0.0",
  "private": true,
  "description": "The Apex - Executive Board Decision Engine (AXIS Decision BoardRoom MVP)",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --max-warnings 0",
    "lint:fix": "next lint --fix --max-warnings 0",
    "type-check": "tsc --noEmit",
    "measure:server-components": "tsx scripts/measure-server-components.ts",
    "benchmark": "tsx scripts/performance-benchmark.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:db": "vitest run src/__tests__/db",
    "test:db:watch": "vitest watch src/__tests__/db",
    "test:db:unit": "vitest run src/__tests__/db/connection.unit.test.ts",
    "test:db:integration": "vitest run src/__tests__/db/connection.integration.test.ts",
    "test:db:fast": "vitest run src/__tests__/db --no-coverage --reporter=dot",
    "test:db:parallel": "vitest run src/__tests__/db --threads",
    "test:db:sequential": "vitest run src/__tests__/db --no-threads",
    "test:db-performance": "tsx scripts/database-performance-test.ts",
    "validate:db": "tsx scripts/validate-db-connection.ts",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "neon:sync": "tsx scripts/neon-drizzle-sync.ts",
    "neon:branch": "tsx scripts/neon-branch-manager.ts",
    "neon:cs": "neonctl connection-string --pooled --ssl require",
    "neon:projects": "neonctl projects list",
    "neon:context": "neonctl set-context",
    "neon:me": "neonctl me",
    "neon:auth": "neonctl auth",
    "neon:branches": "neonctl branches list",
    "neon:databases": "neonctl databases list",
    "production:setup": "tsx scripts/production-setup.ts",
    "production:validate": "tsx scripts/production-validate.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f postgres",
    "docker:restart": "docker-compose restart"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@mythic/design-system": "workspace:*",
    "@mythic/shared-types": "workspace:*",
    "@mythic/shared-utils": "workspace:*",
    "@mythic/domain-core": "workspace:*",
    "@mythic/performance": "workspace:*",
    "@mythic/monitoring": "workspace:*",
    "@tanstack/react-query": "^5.56.0",
    "@trpc/client": "^11.8.1",
    "@trpc/next": "^11.8.1",
    "@trpc/react-query": "^11.8.1",
    "@trpc/server": "^11.8.1",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "@neondatabase/serverless": "^0.10.0",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "next": "^16.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "drizzle-kit": "^0.31.8",
    "postcss": "^8.4.47",
    "typescript": "^5.3.3"
  }
}
