{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "name": "Developers Layout",
  "version": "1.0.0",
  "description": "Layout wireframe for developers documentation section. Follows Next.js App Router conventions and Tailwind CSS v4 design system tokens.",
  "audience": "developers",
  "designSystem": {
    "tokens": "@mythic/tailwindcss-v4-design-system/tokens/axis-theme.css",
    "colors": {
      "background": "bg-obsidian",
      "border": "border-charcoal",
      "text": "text-parchment"
    },
    "spacing": {
      "sidebarWidth": "w-64",
      "padding": "p-8"
    }
  },
  "components": [
    {
      "type": "Navbar",
      "props": {
        "audience": "developers",
        "modules": ["api", "architecture", "guides"],
        "search": true,
        "commandPalette": true
      },
      "position": "sticky",
      "styling": {
        "background": "bg-obsidian",
        "border": "border-b border-charcoal",
        "height": "h-16",
        "zIndex": "z-50"
      }
    },
    {
      "type": "Sidebar",
      "props": {
        "navigation": "hierarchical",
        "search": true,
        "collapsible": true
      },
      "position": "fixed",
      "styling": {
        "width": "w-64",
        "background": "bg-obsidian",
        "border": "border-r border-charcoal",
        "responsive": {
          "mobile": "hidden",
          "tablet": "lg:hidden lg:block",
          "desktop": "block"
        }
      }
    },
    {
      "type": "Content",
      "props": {
        "maxWidth": "prose",
        "typography": "editorial",
        "padding": "p-8"
      },
      "styling": {
        "margin": "lg:ml-64",
        "responsive": {
          "mobile": "ml-0 px-4",
          "tablet": "ml-0 px-6",
          "desktop": "ml-64 px-8"
        }
      }
    },
    {
      "type": "CommandPalette",
      "props": {
        "shortcut": "Cmd+K",
        "fuzzySearch": true
      },
      "position": "overlay",
      "styling": {
        "zIndex": "z-50"
      }
    }
  ],
  "responsive": {
    "mobile": {
      "layout": "stack",
      "sidebar": "hidden",
      "content": "full-width",
      "breakpoint": "sm"
    },
    "tablet": {
      "layout": "sidebar-collapsible",
      "sidebar": "collapsible",
      "content": "adaptive",
      "breakpoint": "md"
    },
    "desktop": {
      "layout": "sidebar-fixed",
      "sidebar": "fixed",
      "content": "with-sidebar",
      "breakpoint": "lg"
    }
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px",
    "note": "Tailwind CSS v4 default breakpoints - use design system tokens for custom breakpoints"
  },
  "nextjs": {
    "appRouter": true,
    "serverComponents": true,
    "metadata": {
      "title": "Developer Documentation",
      "description": "Documentation for developers"
    }
  }
}
