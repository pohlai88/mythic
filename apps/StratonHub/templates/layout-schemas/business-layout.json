{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "name": "Business Layout",
  "version": "1.0.0",
  "description": "Layout wireframe for business stakeholders documentation section. Follows Next.js App Router conventions and Tailwind CSS v4 design system tokens.",
  "audience": "business",
  "designSystem": {
    "tokens": "@mythic/tailwindcss-v4-design-system/tokens/axis-theme.css",
    "colors": {
      "background": "bg-obsidian",
      "border": "border-charcoal",
      "text": "text-parchment"
    },
    "spacing": {
      "container": "max-w-axis",
      "padding": "p-8"
    }
  },
  "components": [
    {
      "type": "Navbar",
      "props": {
        "audience": "business",
        "sections": ["overview", "training", "compliance"],
        "search": false,
        "commandPalette": false
      },
      "position": "sticky",
      "styling": {
        "background": "bg-obsidian",
        "border": "border-b border-charcoal",
        "height": "h-16",
        "zIndex": "z-50"
      }
    },
    {
      "type": "Content",
      "props": {
        "maxWidth": "wide",
        "typography": "editorial",
        "padding": "p-8",
        "showBreadcrumbs": true,
        "centered": true
      },
      "styling": {
        "margin": "mx-auto",
        "maxWidth": "max-w-axis",
        "responsive": {
          "mobile": "max-w-full px-4",
          "tablet": "max-w-axis px-6",
          "desktop": "max-w-axis px-8"
        }
      }
    }
  ],
  "responsive": {
    "mobile": {
      "layout": "centered",
      "content": "full-width",
      "breakpoint": "sm"
    },
    "tablet": {
      "layout": "centered",
      "content": "adaptive",
      "breakpoint": "md"
    },
    "desktop": {
      "layout": "centered",
      "content": "max-width",
      "breakpoint": "lg"
    }
  },
  "breakpoints": {
    "sm": "640px",
    "md": "768px",
    "lg": "1024px",
    "xl": "1280px",
    "2xl": "1536px",
    "note": "Tailwind CSS v4 default breakpoints - use design system tokens for custom breakpoints"
  },
  "nextjs": {
    "appRouter": true,
    "serverComponents": true,
    "metadata": {
      "title": "Business Documentation",
      "description": "Documentation for business stakeholders"
    }
  }
}
