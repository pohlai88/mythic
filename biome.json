{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignoreUnknown": false,
    "maxSize": 1048576,
    "ignore": [
      "node_modules",
      ".next",
      "out",
      "dist",
      "build",
      "*.min.js",
      "*.min.css",
      "pnpm-lock.yaml",
      ".git",
      ".vscode",
      ".cursor",
      "coverage",
      ".turbo",
      "*.log",
      ".env.local",
      ".env.*.local",
      "*.tsbuildinfo",
      ".vercel",
      "public/sw.js",
      "public/workbox-*.js"
    ],
    "include": [
      "**/*.js",
      "**/*.jsx",
      "**/*.mjs",
      "**/*.ts",
      "**/*.tsx",
      "**/*.json",
      "**/*.jsonc",
      "**/*.css"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf",
    "formatWithErrors": false
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "warn",
        "noUnusedImports": "warn",
        "noUnusedPrivateClassMembers": "warn",
        "noUnusedFunctionParameters": "warn",
        "noUnusedLabels": "warn"
      },
      "style": {
        "useConst": "warn",
        "useImportType": "warn",
        "noParameterAssign": "warn",
        "useTemplate": "warn",
        "useShorthandArrayType": "warn",
        "useNamingConvention": {
          "level": "warn",
          "options": {
            "strictCase": false
          }
        }
      },
      "suspicious": {
        "noConsole": {
          "level": "error",
          "options": {
            "allow": ["warn", "error"]
          }
        },
        "noExplicitAny": "warn",
        "noArrayIndexKey": "warn",
        "noAssignInExpressions": "warn",
        "noDoubleEquals": "warn",
        "noCommentText": "error"
      },
      "complexity": {
        "noForEach": "off",
        "noExcessiveNestedTestSuites": "warn",
        "useSimplifiedLogicExpression": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn",
        "noGlobalEval": "warn"
      },
      "performance": {
        "noDelete": "warn",
        "noAccumulatingSpread": "warn",
        "noReExportAll": "warn"
      },
      "nursery": {
        "useSortedClasses": "off"
      },
      "a11y": {
        "useKeyWithClickEvents": "warn",
        "useKeyWithMouseEvents": "warn",
        "useValidAnchor": "warn",
        "useValidAriaProps": "warn",
        "useValidAriaValues": "warn",
        "useValidLang": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "es5",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false
    },
    "globals": []
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100,
      "quoteStyle": "double"
    },
    "linter": {
      "enabled": true
    }
  },
  "overrides": [
    {
      "include": [
        "*.config.js",
        "*.config.ts",
        "*.config.mjs",
        "next.config.*",
        "tailwind.config.*",
        "turbo.json"
      ],
      "formatter": {
        "lineWidth": 120
      },
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "warn"
          }
        }
      }
    },
    {
      "include": ["**/env.ts", "**/env.*.ts", "**/*env*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "error"
          },
          "correctness": {
            "useExhaustiveDependencies": "error"
          },
          "style": {
            "useImportType": "error"
          }
        }
      },
      "javascript": {
        "globals": ["process"]
      }
    },
    {
      "include": [
        "src/lib/api-schemas/**",
        "src/lib/zod/**",
        "apps/**/src/lib/api-schemas/**",
        "apps/**/src/lib/zod/**",
        "packages/**/src/lib/api-schemas/**",
        "packages/**/src/lib/zod/**"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "error"
          },
          "correctness": {
            "useExhaustiveDependencies": "error"
          },
          "style": {
            "useImportType": "error",
            "noRestrictedGlobals": {
              "level": "error",
              "options": {
                "deniedGlobals": ["z"]
              }
            }
          },
          "security": {
            "noDangerouslySetInnerHtml": "error",
            "noGlobalEval": "error"
          }
        }
      }
    },
    {
      "include": [
        "**/server-actions/**",
        "**/actions/**",
        "apps/**/app/actions/**",
        "apps/**/app/api/**"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "error"
          },
          "correctness": {
            "useExhaustiveDependencies": "error"
          },
          "style": {
            "useImportType": "error"
          },
          "security": {
            "noDangerouslySetInnerHtml": "error",
            "noGlobalEval": "error"
          }
        }
      }
    },
    {
      "include": [
        "pages/**",
        "app/**",
        "components/**",
        "apps/**/app/**",
        "apps/**/pages/**",
        "apps/**/components/**"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "error"
          },
          "correctness": {
            "useExhaustiveDependencies": "error"
          },
          "style": {
            "useImportType": "warn"
          },
          "security": {
            "noDangerouslySetInnerHtml": "warn"
          }
        }
      }
    },
    {
      "include": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/__tests__/**",
        "**/__mocks__/**"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          },
          "correctness": {
            "useExhaustiveDependencies": "off"
          }
        }
      }
    },
    {
      "include": ["scripts/**/*.ts", "scripts/**/*.js", "scripts/**/*.mjs"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "include": ["**/*.d.ts"],
      "linter": {
        "enabled": false
      }
    },
    {
      "include": [
        "components/api-reference.tsx",
        "pages/api/graphql/**",
        "apps/**/pages/api/graphql/**"
      ],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "off"
          }
        }
      }
    },
    {
      "include": ["apps/boardroom/**/*.ts", "apps/boardroom/**/*.tsx"],
      "linter": {
        "rules": {
          "style": {
            "noRestrictedGlobals": {
              "level": "warn",
              "options": {
                "deniedGlobals": []
              }
            }
          }
        }
      }
    }
  ]
}
