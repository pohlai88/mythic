{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "ignoreUnknown": false,
    "maxSize": 1048576,
    "ignore": [
      "node_modules",
      ".next",
      "out",
      "dist",
      "build",
      "*.min.js",
      "*.min.css",
      "pnpm-lock.yaml",
      ".git",
      ".vscode",
      ".cursor",
      "coverage",
      ".turbo",
      "*.log",
      ".env.local",
      ".env.*.local",
      "*.tsbuildinfo",
      ".vercel",
      "public/sw.js",
      "public/workbox-*.js"
    ],
    "include": ["**/*.js", "**/*.jsx", "**/*.ts", "**/*.tsx", "**/*.json", "**/*.jsonc", "**/*.css"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf",
    "formatWithErrors": false
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "warn",
        "noUnusedImports": "warn",
        "noUnusedPrivateClassMembers": "warn",
        "noUnusedFunctionParameters": "warn",
        "noUnusedLabels": "warn"
      },
      "style": {
        "useConst": "warn",
        "useImportType": "warn",
        "noParameterAssign": "warn",
        "useTemplate": "warn",
        "useShorthandArrayType": "warn",
        "useNamingConvention": {
          "level": "warn",
          "options": {
            "strictCase": false
          }
        }
      },
      "suspicious": {
        "noConsole": {
          "level": "warn",
          "options": {
            "allow": ["warn", "error"]
          }
        },
        "noExplicitAny": "warn",
        "noArrayIndexKey": "warn",
        "noAssignInExpressions": "warn",
        "noDoubleEquals": "warn"
      },
      "complexity": {
        "noForEach": "off",
        "noExcessiveNestedTestSuites": "warn",
        "useSimplifiedLogicExpression": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "warn",
        "noGlobalEval": "warn"
      },
      "performance": {
        "noDelete": "warn",
        "noAccumulatingSpread": "warn",
        "noReExportAll": "warn"
      },
      "nursery": {
        "useSortedClasses": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "es5",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false
    },
    "globals": []
  },
  "json": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100
    }
  },
  "css": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100,
      "quoteStyle": "double"
    },
    "linter": {
      "enabled": true
    }
  },
  "overrides": [
    {
      "include": [
        "*.config.js",
        "*.config.ts",
        "next.config.js",
        "tailwind.config.ts",
        "turbo.json"
      ],
      "formatter": {
        "lineWidth": 120
      }
    },
    {
      "include": ["src/lib/api-schemas/**", "src/lib/zod/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "error"
          },
          "correctness": {
            "useExhaustiveDependencies": "error"
          },
          "style": {
            "useImportType": "error"
          }
        }
      }
    },
    {
      "include": ["pages/**", "app/**", "components/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "error"
          },
          "correctness": {
            "useExhaustiveDependencies": "error"
          }
        }
      }
    },
    {
      "include": ["**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          },
          "correctness": {
            "useExhaustiveDependencies": "off"
          }
        }
      }
    },
    {
      "include": ["scripts/**/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "include": ["**/*.d.ts"],
      "linter": {
        "enabled": false
      }
    },
    {
      "include": ["components/api-reference.tsx"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "off"
          }
        }
      }
    },
    {
      "include": ["pages/api/graphql/**"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": "off"
          }
        }
      }
    }
  ]
}
