{
  // ============================================================================
  // Editor Configuration
  // ============================================================================
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.defaultFormatter": "biomejs.biome",
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "editor.quickSuggestions": {
    "strings": true
  },

  // ============================================================================
  // File Management
  // ============================================================================
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "files.exclude": {
    "**/.next": true,
    "**/node_modules": true
  },
  "search.exclude": {
    "**/.next": true,
    "**/node_modules": true,
    "**/package-lock.json": true
  },

  // ============================================================================
  // TypeScript & JavaScript
  // ============================================================================
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.suggest.autoImports": true,

  // ============================================================================
  // Biome Configuration
  // ============================================================================
  "biome.enabled": true,
  "biome.lsp.bin": "${workspaceFolder}/node_modules/@biomejs/biome/bin/biome",
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll.biome": "explicit",
      "source.organizeImports.biome": "explicit"
    }
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll.biome": "explicit",
      "source.organizeImports.biome": "explicit"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll.biome": "explicit",
      "source.organizeImports.biome": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "source.fixAll.biome": "explicit",
      "source.organizeImports.biome": "explicit"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[css]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.formatOnSave": true,
    "editor.wordWrap": "on"
  },
  "[mdx]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.formatOnSave": true,
    "editor.wordWrap": "on"
  },

  // ============================================================================
  // Tailwind CSS IntelliSense Configuration
  // ============================================================================
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^\"'`]*)(?:'|\"|`)"],
    ["twMerge\\(([^)]*)\\)", "(?:'|\"|`)([^\"'`]*)(?:'|\"|`)"],
    ["clsx\\(([^)]*)\\)", "(?:'|\"|`)([^\"'`]*)(?:'|\"|`)"]
  ],
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.validate": true,
  "tailwindCSS.lint.cssConflict": "warning",
  "tailwindCSS.lint.invalidApply": "error",
  "tailwindCSS.lint.invalidConfigPath": "error",
  "tailwindCSS.lint.invalidScreen": "error",
  "tailwindCSS.lint.invalidTailwindDirective": "error",
  "tailwindCSS.lint.invalidVariant": "error",
  "tailwindCSS.lint.recommendedVariantOrder": "warning",
  // Monorepo: Auto-detect config files in workspace and app directories
  "tailwindCSS.rootFontSize": 16,
  "tailwindCSS.files.exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/.next/**",
    "**/dist/**",
    "**/build/**"
  ],
  "css.validate": false,

  // ============================================================================
  // Extension-Specific Settings
  // ============================================================================
  "path-intellisense.autoSlashAfterDirectory": true,
  "path-intellisense.extensionOnImport": true,
  "markdown.extension.toc.levels": "2..6",
  "markdown.extension.preview.autoShowPreviewToSide": false,
  "markdown.extension.print.absoluteImgPath": false,

  // ============================================================================
  // Vitest Configuration
  // ============================================================================
  "vitest.enable": true,
  "vitest.commandLine": "pnpm test",
  "vitest.include": ["**/*.{test,spec}.{ts,tsx}"],
  "vitest.exclude": ["**/node_modules/**", "**/dist/**", "**/.next/**", "**/.turbo/**"],
  "vitest.workspaceConfig": "./vitest.config.ts",
  "vitest.nodeEnv": {
    "NODE_ENV": "test"
  },

  // ============================================================================
  // Git Configuration
  // ============================================================================
  "git.enabled": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.path": "C:\\Program Files\\Git\\cmd\\git.exe",
  "git.ignoreLimitWarning": true,
  "gitlens.codeLens.enabled": true,
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.enabled": true,
  "gitlens.statusBar.enabled": true,

  // ============================================================================
  // Disabled Features
  // ============================================================================
  "deno.enable": false,
  "npm.enable": false,
  "npm.autoDetect": "off",
  "npm-intellisense.enabled": false,
  "prettier.enable": false,
  
  // ============================================================================
  // Spell Checker - Disabled
  // ============================================================================
  "cSpell.enabled": false,
  "cSpell.enableFiletypes": [],
  "cSpell.showStatus": false,
  "cSpell.diagnosticLevel": "none",

  // ============================================================================
  // Language-Specific Formatters
  // ============================================================================
  "[powershell]": {
    "editor.defaultFormatter": "ms-vscode.powershell"
  },

  // ============================================================================
  // GitHub Actions Workflow Linter
  // ============================================================================
  // Suppress false positive warnings for optional secrets (TURBO_TOKEN, TURBO_TEAM)
  // These are optional and warnings are expected - syntax is correct
  "github-actions.workflows.pinned.workflows": [],
  "github-actions.workflows.pinned.refresh.enabled": false
}
