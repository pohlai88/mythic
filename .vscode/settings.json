{
  // ============================================================================
  // Editor Configuration
  // ============================================================================
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.defaultFormatter": "vscode.typescript-language-features",
  "editor.quickSuggestions": {
    "strings": true
  },
  // ============================================================================
  // File Management
  // ============================================================================
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "files.exclude": {
    "**/.next": true,
    "**/node_modules": true
  },
  "search.exclude": {
    "**/.next": true,
    "**/node_modules": true,
    "**/package-lock.json": true
  },
  // ============================================================================
  // TypeScript & JavaScript
  // ============================================================================
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.suggest.autoImports": true,
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.formatOnSave": true,
    "editor.wordWrap": "on"
  },
  "[mdx]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.formatOnSave": true,
    "editor.wordWrap": "on"
  },
  // ============================================================================
  // Tailwind CSS IntelliSense Configuration
  // ============================================================================
  "tailwindCSS.experimental.classRegex": [
    [
      "cva\\(([^)]*)\\)",
      "[\"'`]([^\"'`]*).*?[\"'`]"
    ],
    [
      "cn\\(([^)]*)\\)",
      "(?:'|\"|`)([^\"'`]*)(?:'|\"|`)"
    ],
    [
      "twMerge\\(([^)]*)\\)",
      "(?:'|\"|`)([^\"'`]*)(?:'|\"|`)"
    ],
    [
      "clsx\\(([^)]*)\\)",
      "(?:'|\"|`)([^\"'`]*)(?:'|\"|`)"
    ]
  ],
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.validate": true,
  "tailwindCSS.lint.cssConflict": "warning",
  "tailwindCSS.lint.invalidApply": "error",
  "tailwindCSS.lint.invalidConfigPath": "error",
  "tailwindCSS.lint.invalidScreen": "error",
  "tailwindCSS.lint.invalidTailwindDirective": "error",
  "tailwindCSS.lint.invalidVariant": "error",
  "tailwindCSS.lint.recommendedVariantOrder": "warning",
  // Monorepo: Auto-detect config files in workspace and app directories
  "tailwindCSS.rootFontSize": 16,
  "tailwindCSS.files.exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/.next/**",
    "**/dist/**",
    "**/build/**"
  ],
  "css.validate": false,
  // ============================================================================
  // Extension-Specific Settings
  // ============================================================================
  "path-intellisense.autoSlashAfterDirectory": true,
  "path-intellisense.extensionOnImport": true,
  "markdown.extension.toc.levels": "2..6",
  // ============================================================================
  // Testing (Vitest)
  // ============================================================================
  "vitest.enable": true,
  "vitest.commandLine": "pnpm test",
  "vitest.workspaceConfig": "./.config/vitest.config.ts",
  "vitest.nodeEnv": {
    "NODE_ENV": "test"
  },
  // ============================================================================
  // Git Configuration
  // ============================================================================
  "git.enabled": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.path": "C:\\Program Files\\Git\\cmd\\git.exe",
  "git.ignoreLimitWarning": true,
  "gitlens.codeLens.enabled": true,
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.enabled": true,
  "gitlens.statusBar.enabled": true,
  // ============================================================================
  // ESLint Configuration (Flat Config)
  // ============================================================================
  "eslint.enable": true,
  "eslint.useFlatConfig": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [
    {
      "pattern": "apps/*"
    },
    {
      "pattern": "packages/*"
    }
  ],
  // Run ESLint on type and save
  "eslint.run": "onType",
  // Enable lint task for linting all workspace files
  // Note: VS Code ESLint extension only lints open files by default
  // To lint all files, run the "ESLint: Lint All Files" task (Ctrl+Shift+P -> Tasks: Run Task)
  "eslint.lintTask.enable": true,
  "eslint.lintTask.options": "--max-warnings 0",
  // Configure lint task to run on workspace files
  "eslint.lintTask.problemMatcher": {
    "owner": "eslint",
    "fileLocation": [
      "relative",
      "${workspaceFolder}"
    ],
    "pattern": {
      "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error)\\s+(.*)\\s\\((.*)\\)$",
      "file": 1,
      "line": 2,
      "column": 3,
      "severity": 4,
      "message": 5,
      "code": 6
    }
  },
  // Probe files to determine if ESLint should run
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // Show problems for all files in workspace
  "eslint.problems.shortenToSingleLine": false,
  "eslint.alwaysShowStatus": true,
  // ESLint for linting only (Prettier handles formatting)
  "eslint.format.enable": false,
  // Show problems panel for all files (not just open files)
  "problems.showCurrentInStatus": true,
  "prettier.enable": true,
  "prettier.requireConfig": true,
  // ============================================================================
  // Disabled Extensions
  // ============================================================================
  "deno.enable": false,
  "npm.enable": false,
  "npm.autoDetect": "off",
  // ============================================================================
  // Spell Checker - Enabled for README.md and apps/StratonHub only
  // ============================================================================
  "cSpell.enabled": true,
  "cSpell.enabledFileTypes": {
    "markdown": true,
    "mdx": true,
    "typescript": true,
    "typescriptreact": true,
    "javascript": true,
    "javascriptreact": true,
    "json": true,
    "jsonc": true
  },
  "cSpell.showStatus": true,
  "cSpell.diagnosticLevel": "Warning",
  // Only check README.md files and files in apps/StratonHub
  // Exclude everything else explicitly
  "cSpell.ignorePaths": [
    "**/*",
    "!**/README.md",
    "!apps/StratonHub/**"
  ],
  // Limit checking to reduce performance impact
  "cSpell.checkLimit": 500,
  // Use workspace-specific settings
  "cSpell.useGitignore": true,
  // ============================================================================
  // Language-Specific Formatters
  // ============================================================================
  "[powershell]": {
    "editor.defaultFormatter": "ms-vscode.powershell"
  },
  // ============================================================================
  // GitHub Actions Workflow Linter
  // ============================================================================
  // Suppress false positive warnings for optional secrets (TURBO_TOKEN, TURBO_TEAM)
  // These are optional and warnings are expected - syntax is correct
  "github-actions.workflows.pinned.workflows": [],
  "github-actions.workflows.pinned.refresh.enabled": false
}
