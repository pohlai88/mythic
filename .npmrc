# Enable pre/post scripts for pnpm
# pnpm@8 by default doesn't execute pre/post scripts
# pnpm@9 by default runs pre/post scripts
enable-pre-post-scripts=true

# Hoist React to root to prevent multiple React instances
# This fixes "React Element from an older version" errors in monorepos
# Critical for Next.js 16 + Turbopack in monorepos
public-hoist-pattern[]=*react*
public-hoist-pattern[]=*react-dom*
public-hoist-pattern[]=*react/jsx-runtime*
public-hoist-pattern[]=*react/jsx-dev-runtime*

# Hoist TypeScript to root for ESLint TypeScript-ESLint resolution
# This fixes "Cannot find module 'typescript'" errors in TypeScript-ESLint
# Required for typed linting to work in pnpm monorepos
# Using shamefully-hoist for TypeScript to ensure it's available to all packages
shamefully-hoist=true
